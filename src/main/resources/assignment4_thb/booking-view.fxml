<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="assignment4_thb.BookingController">
   <padding>
      <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
   </padding>

   <!-- Booking Details Section -->
   <VBox spacing="10.0">
      <Label text="Booking Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
      <HBox spacing="10.0">
         <Label text="Hotel:" style="-fx-font-weight: bold;" prefWidth="100.0"/>
         <Label fx:id="hotelLabel" text="Hotel Name" prefWidth="400.0"/>
      </HBox>
      <HBox spacing="10.0">
         <Label text="Room Type:" style="-fx-font-weight: bold;" prefWidth="100.0"/>
         <Label fx:id="typeLabel" text="Type" prefWidth="400.0"/>
      </HBox>
      <HBox spacing="10.0">
         <Label text="Price:" style="-fx-font-weight: bold;" prefWidth="100.0"/>
         <Label fx:id="priceLabel" text="Price" prefWidth="400.0"/>
      </HBox>
   </VBox>

   <!-- Payment Information Section -->
   <VBox spacing="10.0">
      <Label text="Payment Information" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
      <HBox spacing="10.0">
         <Label text="Card #:" style="-fx-font-weight: bold;" prefWidth="100.0"/>
         <TextField fx:id="cardNr" prefWidth="200.0"/>
      </HBox>
      <HBox spacing="10.0">
         <Label text="CVC:" style="-fx-font-weight: bold;" prefWidth="100.0"/>
         <TextField fx:id="cvc" prefWidth="100.0"/>
      </HBox>
      <HBox spacing="10.0">
         <Label text="Expiry Date:" style="-fx-font-weight: bold;" prefWidth="100.0"/>
         <TextField fx:id="expiryMonth" promptText="MM" prefWidth="50.0"/>
         <Label text="/" prefWidth="10.0"/>
         <TextField fx:id="expiryYear" promptText="YY" prefWidth="50.0"/>
      </HBox>
   </VBox>

   <!-- Confirm Button -->
   <HBox alignment="CENTER_RIGHT">
      <Button fx:id="confirmButton" text="Confirm" prefHeight="40.0" prefWidth="150.0"/>
   </HBox>
</VBox>