<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="assignment4_thb.CustomerController"
            prefHeight="200.0" prefWidth="200.0" >

    <VBox alignment="CENTER" spacing="15"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0">

        <Label text="Welcome to Hotel Booking System"
               style="-fx-font-weight: bold; -fx-font-size: 16px;" />
        <Button fx:id="fxLogin" text="Login" prefWidth="80" onAction="#onLogin" />
        <Button fx:id="fxRegister" text="Register" prefWidth="80" onAction="#onRegister"/>
    </VBox>
</AnchorPane>