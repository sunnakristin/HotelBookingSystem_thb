<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="assignment4_thb.RoomViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- User Profile Section -->
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Welcome," style="-fx-font-size: 18px;"/>
        <Label text="User 1" style="-fx-font-size: 18px;"/>
    </HBox>

    <!-- Hotel Search Section -->
    <VBox spacing="10.0">
        <Label text="Search Hotels" style="-fx-font-size: 24px;"/>
        
        <HBox alignment="CENTER" spacing="10.0">
            <TextField fx:id="searchField" promptText="Search by hotel name or location..." prefWidth="300"/>
            <Button fx:id="searchButton" text="Leita" onAction="#onSearch"/>
        </HBox>

        <TableView fx:id="hotelTable" VBox.vgrow="ALWAYS" prefHeight="200">
            <columns>
                <TableColumn fx:id="nameColumn" text="Hotel Name" prefWidth="200"/>
                <TableColumn fx:id="locationColumn" text="Location" prefWidth="200"/>
            </columns>
        </TableView>
        
        <!-- Hotel Details Section (initially hidden) -->
        <VBox fx:id="hotelDetailsContainer" spacing="10.0" style="-fx-background-color: #f5f5f5; -fx-padding: 15;">
            <Label fx:id="selectedHotelLabel" text="Hotel Details" style="-fx-font-size: 20px;"/>
            
            <!-- Room Search Form -->
            <GridPane vgap="10" hgap="10">
                <Label text="Room Type:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="roomTypeComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200"/>

                <Label text="Number of guests:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="numberOfGuests" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200"/>

                <Label text="Check-in Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="checkInDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="200"/>

                <Label text="Check-out Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="checkOutDatePicker" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="200"/>
            </GridPane>

            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="searchRoomsButton" text="Search Available Rooms" onAction="#onSearchRooms" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            </HBox>
            
            <!-- Available Rooms Table -->
            <TableView fx:id="availableRoomsTable" VBox.vgrow="ALWAYS" prefHeight="150">
                <columns>
                    <TableColumn fx:id="roomTypeColumn" text="Room Type" prefWidth="100"/>
                    <TableColumn fx:id="priceColumn" text="Price" prefWidth="100"/>
                    <TableColumn fx:id="maxGuestsColumn" text="Max Guests" prefWidth="100"/>
                    <TableColumn fx:id="bookColumn" text="Action" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </VBox>

    <!-- Booking Section -->
    <VBox spacing="10.0">
        <Label text="My Bookings" style="-fx-font-size: 24px;"/>
        
        <TableView fx:id="bookingsTable" VBox.vgrow="ALWAYS" prefHeight="200">
            <columns>
                <TableColumn fx:id="hotelNameColumn" text="Hotel" prefWidth="150"/>
                <TableColumn fx:id="checkInColumn" text="Check-in" prefWidth="100"/>
                <TableColumn fx:id="checkOutColumn" text="Check-out" prefWidth="100"/>
                <TableColumn fx:id="guestsColumn" text="Guests" prefWidth="80"/>
                <TableColumn fx:id="priceColumn" text="Price" prefWidth="100"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
            </columns>
        </TableView>
    </VBox>
</VBox>
